        <% for(let message of messages) { %>
          <tr>
            <td id="owner">
              <%= message.owner %>
            </td>
            <td>
              <%= message.item_name %>
            </td>
            <td>
              <%= message.sender %>
            </td>
            <td>
              <%= message.title %>
            </td>
            <td>
              <%= message.content %>
            </td>
